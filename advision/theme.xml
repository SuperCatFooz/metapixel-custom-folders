<theme>
	<formatVersion>4</formatVersion>
	<include>./../metapixel.xml</include>

	<view name="system, basic, detailed, video">

		<image name="background">
			<color>f26f6f</color>
		</image>

		<image name="logo">
			<path>./logo.png</path>
		</image>

		<image name="console" extra="true">
			<path>./console.png</path>
		</image>

	</view>

	<view name="system">

		<image name="background" extra="true">
			<color>f26f6f</color>
		</image>

		<text name="system_description" extra="true">
			<text>The Adventure Vision is a self-contained cartridge-based video game console released by Entex Industries in 1982. The Adventure Vision was Entex's second generation system.  Only four games were ever released for the Adventure Vision, and fewer than 50,000 units were sold.</text>
		</text>

		<image name="screenshot_left" extra="true">
			<path>./screenshot1.jpg</path>
		</image>
		<image name="screenshot_right" extra="true">
			<path>./screenshot2.jpg</path>
		</image>
	</view>

	<view name="basic, detailed, video">

		<textlist name="gamelist">
			<selectorColor>f26f6f88</selectorColor>
		</textlist>

	</view>
	
</theme>