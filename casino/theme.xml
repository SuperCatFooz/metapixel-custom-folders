<theme>
	<formatVersion>4</formatVersion>
	<include>./../metapixel.xml</include>

	<view name="system, basic, detailed, video">

		<image name="background">
			<color>B22222</color>
		</image>

		<image name="logo">
			<path>./logo.png</path>
		</image>

		<image name="console" extra="true">
			<path>./console.png</path>
		</image>

	</view>

	<view name="system">

		<image name="background" extra="true">
			<color>B22222</color>
		</image>

		<text name="system_description" extra="true">
			<text>A casino game is a gambling game, typically found at a casino.  Games that typically qualify as casino games include slot machines, roulette wheels, card games such as Blackjack or Poker, and pachinko machines.</text>
		</text>

		<image name="screenshot_left" extra="true">
			<path>./screenshot1.jpg</path>
		</image>
		<image name="screenshot_right" extra="true">
			<path>./screenshot2.jpg</path>
		</image>
	</view>

	<view name="basic, detailed, video">

		<textlist name="gamelist">
			<selectorColor>00000088</selectorColor>
		</textlist>

	</view>
	
</theme>