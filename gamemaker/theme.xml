<theme>
	<formatVersion>4</formatVersion>
	<include>./../metapixel.xml</include>

	<view name="system, basic, detailed, video">

		<image name="background">
			<color>8cd248</color>
		</image>

		<image name="logo">
			<path>./logo.png</path>
		</image>

		<image name="console" extra="true">
			<path>./console.png</path>
		</image>

	</view>

	<view name="system">

		<image name="background" extra="true">
			<color>8cd248</color>
		</image>

		<text name="system_description" extra="true">
			<text>Originally released in 1999 as Amino, Game Maker is a proprietary game creation tool by the company YoYo Games.  GameMaker was designed to allow novice computer programmers to be able to make computer games without much programming knowledge.</text>
		</text>

		<image name="screenshot_left" extra="true">
			<path>./screenshot1.jpg</path>
		</image>
		<image name="screenshot_right" extra="true">
			<path>./screenshot2.jpg</path>
		</image>
	</view>

	<view name="basic, detailed, video">

		<textlist name="gamelist">
			<selectorColor>8cd24888</selectorColor>
		</textlist>

	</view>
	
</theme>