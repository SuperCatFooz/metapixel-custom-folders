<theme>
	<formatVersion>4</formatVersion>
	<include>./../metapixel.xml</include>

	<view name="system, basic, detailed, video">

		<image name="background">
			<color>7289da</color>
		</image>

		<image name="logo">
			<path>./logo.png</path>
		</image>

		<image name="console" extra="true">
			<path>./console.png</path>
		</image>

	</view>

	<view name="system">

		<image name="background" extra="true">
			<color>7289da</color>
		</image>

		<text name="system_description" extra="true">
			<text>Discord is a proprietary freeware VoIP application designed for gaming communities. Discord runs on Windows, macOS, Android, iOS, Linux, and in a web browser. As of May 2017, Discord has over 45 million users.</text>
		</text>
	</view>

	<view name="basic, detailed, video">

		<textlist name="gamelist">
			<selectorColor>7289da88</selectorColor>
		</textlist>

	</view>
	
</theme>